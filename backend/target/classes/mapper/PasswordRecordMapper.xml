<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hnau.platform.mapper.PasswordRecordMapper">

    <!-- 获取用户最近的密码修改记录 -->
    <select id="selectRecentByUserId" resultType="com.hnau.platform.entity.PasswordRecord">
        SELECT * FROM password_record
        WHERE user_id = #{userId}
        ORDER BY modify_time DESC
        LIMIT #{limit}
    </select>

</mapper>
